<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.groupunix.drivewireui.ChooseServerDialogController" stylesheets="@../css/application.css">
   <content>
      <VBox spacing="10.0">
         <children>
            <Label text="Connect to a DriveWire server on another computer or instance." />
            <Label text="Enter server address in the form host:port" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
            <ComboBox fx:id="hostComboBox" editable="true" promptText="127.0.0.1:6800" VBox.vgrow="ALWAYS" />
            <Label text="Example: 127.0.0.1:6800 (localhost) or 192.168.1.100:6800 (remote)" style="-fx-font-size: 10px; -fx-text-fill: #999;" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType text="Connect" buttonData="OK_DONE" />
      <ButtonType text="Cancel" buttonData="CANCEL_CLOSE" />
   </buttonTypes>
</DialogPane>

